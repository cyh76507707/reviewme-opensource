# ===========================================
# REQUIRED - Core App Configuration
# ===========================================

# WalletConnect Project ID (get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# Neynar API Key (get from https://neynar.com - server-side only, never expose as NEXT_PUBLIC)
NEYNAR_API_KEY=your_neynar_api_key

# ===========================================
# REQUIRED - Database (Supabase PostgreSQL)
# ===========================================

# Supabase connection string (get from Supabase dashboard > Settings > Database)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# ===========================================
# REQUIRED - Smart Contract Addresses
# ===========================================

# ReviewMe contract address on Base Mainnet
NEXT_PUBLIC_REVIEWME_CONTRACT_ADDRESS=0x5BfC8705cF877776e461e27FAcB51D8C2bDd00c7

# ===========================================
# OPTIONAL - Additional Features
# ===========================================

# Custom RPC URL (optional - adds to fallback list with highest priority)
# Recommended: Get from Alchemy, QuickNode, or similar for better reliability
NEXT_PUBLIC_BASE_RPC_URL=

# Base URL for OG images and metadata
NEXT_PUBLIC_BASE_URL=https://your-domain.com

# App version (auto-set from package.json in next.config.js)
# NEXT_PUBLIC_APP_VERSION=

# ===========================================
# OPTIONAL - Review Roulette Feature
# ===========================================

# ReviewRoulette contract address (if using roulette feature)
NEXT_PUBLIC_ROULETTE_ADDRESS=

# ===========================================
# OPTIONAL - Streak Airdrop Feature
# ===========================================

# StreakAirdrop contract address (if using streak feature)
NEXT_PUBLIC_STREAK_AIRDROP_ADDRESS=

# ===========================================
# OPTIONAL - Decent.xyz Integration
# ===========================================

# Decent API Key (for cross-chain token swaps)
NEXT_PUBLIC_DECENT_API_KEY=

# ===========================================
# OPTIONAL - Use Client-side RPC
# ===========================================

# Set to 'false' to always use server-side API routes for RPC calls
NEXT_PUBLIC_USE_CLIENT_RPC=true

# ===========================================
# DEVELOPMENT / DEPLOYMENT ONLY
# ===========================================

# Private key for contract deployment (NEVER commit this!)
# Only used in deploy scripts, not in the app
# PRIVATE_KEY=0x...

# RPC URLs for Foundry/deployment scripts
# BASE_TESTNET_RPC_URL=https://sepolia.base.org
# BASE_MAINNET_RPC_URL=https://mainnet.base.org

# BaseScan API Key for contract verification
# BASESCAN_API_KEY=your_basescan_api_key

# Vercel Cron Secret (for securing cron endpoints)
# CRON_SECRET=your_random_secret_string
